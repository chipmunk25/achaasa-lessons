generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model user {
  id       String    @id @unique @default(uuid())
  name     String
  email    String    @unique
  password String
  posts    post[]
  comments comment[]
}

model post {
  id          String    @id @unique @default(uuid())
  name        String
  description String?
  user        user?     @relation(fields: [userId], references: [id])
  userId      String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  comments    comment[]
}

model comment {
  id          String  @id @unique @default(uuid())
  description String
  post        post?   @relation(fields: [postId], references: [id])
  postId      String?
  user        user?   @relation(fields: [userId], references: [id])
  userId      String?
}
